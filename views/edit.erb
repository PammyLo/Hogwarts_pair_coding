<form class="" action="/students/<%= @student.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="first_name">First Name: </label>
  <input id="first_name" type="text" name="first_name" value="<%= @student.first_name %>"/>

  <label for="last_name">First Name: </label>
  <input id="last_name" type="text" name="last_name" value="<%= @student.last_name %>" />

  <label for="age">Age: </label>
  <input id="age" type="integer" name="age" value="<%= @student.age %>"/>

  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select" selected="<%= @student.house_id %>">
    <% @houses.each do |house| %>
      <% if house.id == @student.house_id %>
        <option value=<%= house.id %> selected> <%= house.name.capitalize %> </option>
      <% else %>
        <option value=<%= house.id %> > <%= house.name.capitalize %> </option>
      <% end %>
    <% end %>
  </select>


  <input type="submit" value="Change Now" />

</form>
